# -*- mode: config -*-

# Only ABSOLUTE paths are to be used when applicable!

# Path to tool-chain installation directory. This assumes 'sh-elf' and
# 'm68k-elf' cross-compilers are installed
export INSTALL_ROOT=/opt/tool-chains

# Path to where the build is to be located
export BUILD_ROOT=${HOME}/libyaul

# Name of build directory
export BUILD=build

# Option: Development cart used:
#  0: None
#  1: USB flash cartridge
#  2: Datel Action Replay cartridge
export OPTION_DEV_CARTRIDGE=0
